
<div id="content">

    <!-- End of Topbar -->

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Administradores</h1>

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Nome</th>
              <th scope="col">Email</th>
              <th scope="col">Acesso</th>
              <th>
                <% if policy(@admins).new? %>
                  <%= link_to new_management_admin_path, :class => 'btn btn-success btn-icon-split' do %>
                          <span class="icon text-white-50">
                              <i class="fas fa-plus"></i>
                          </span>
                          <span class="text">Cadastrar novo Administrador</span>
                  <% end -%>
                <% end -%>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @admins.each do |admin| %>
            <tr>
              <th scope="row"><%= admin.id %></th>
              <td><%= admin.name %></td>
              <td><%= admin.email %></td>
              <td><%= admin.role_i18n %></td>
              <td>
                <%= link_to edit_management_admin_path(admin), :class => 'btn btn-info btn-icon-split' do %>
                        <span class="icon text-white-50">
                            <i class="fas fa-edit"></i>
                        </span>
                        <span class="text">Editar</span>
                <% end -%>

                <% if current_admin.id != admin.id %>
                  <%= link_to management_admin_path(admin), :class => 'btn btn-danger btn-icon-split', :data => {confirm: "Confirma a exclusão do usuário (<b>#{admin.email}</b>)?"} , method: :delete do %>
                          <span class="icon text-white-50">
                              <i class="fas fa-trash"></i>
                          </span>
                          <span class="text">Apagar</span>
                  <% end -%>
                <% else -%>
                  <%= link_to management_admin_path(admin), :class => 'btn btn-danger btn-icon-split disabled' do %>
                          <span class="icon text-white-50">
                              <i class="fas fa-trash"></i>
                          </span>
                          <span class="text">Apagar</span>
                  <% end -%>
                <% end -%>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

    </div>
    <!-- /.container-fluid -->

</div>