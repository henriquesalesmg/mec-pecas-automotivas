
<div id="content">

    <!-- End of Topbar -->

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Categorias</h1>

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Descrição</th>
              <th>
                  <%= link_to new_management_category_path, :class => 'btn btn-success btn-icon-split' do %>
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Nova Categoria</span>
                <% end -%>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
            <tr>
              <th scope="row"><%= category.id %></th>
              <td><%= category.description %></td>
              <td>
                <%= link_to edit_management_category_path(category), :class => 'btn btn-info btn-icon-split' do %>
                        <span class="icon text-white-50">
                            <i class="fas fa-edit"></i>
                        </span>
                        <span class="text">Editar</span>
                <% end -%>
                  <a href="#" class="btn btn-danger btn-icon-split" disabled="disabled">
                        <span class="icon text-white-50">
                            <i class="fas fa-trash"></i>
                        </span>
                        <span class="text">Apagar</span>
                    </a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

    </div>
    <!-- /.container-fluid -->

</div>